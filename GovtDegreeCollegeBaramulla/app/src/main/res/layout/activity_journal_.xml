<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Journal_Activity"
    android:orientation="vertical"
    android:background="@color/BgColor">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_in_journal_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/topcolor"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="3dp"
            >
            <ImageButton
                android:id="@+id/imgback_in_jornal_toolbar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_chevron_left_black_24dp"
                android:background="@drawable/circle_bg"
                tools:ignore="VectorDrawableCompat"
                android:focusable="true"
                android:clickable="true"/>
            <TextView
                android:id="@+id/tv_in_journal_toolbar"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/"
                android:text="College Journal"
                android:textColor="@color/color1"
                android:layout_toRightOf="@+id/imgback_in_jornal_toolbar"
                android:textSize="18sp"
                />

            <ProgressBar
                android:id="@+id/pg_bar_in_journal_ac"
                style="?android:attr/progressBarStyle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:layout_alignParentRight="true"
                android:indeterminateTint="@color/color1"

                />



        </RelativeLayout>




    </android.support.v7.widget.Toolbar>



    <ListView
        android:layout_margin="1dp"
        android:visibility="visible"
        android:id="@+id/listview_In_journal_ac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"

        />
</LinearLayout>