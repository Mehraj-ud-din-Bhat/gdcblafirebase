<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.college.baramulla.govtdegreecollegebaramulla.register_grievance"
    android:orientation="vertical"
    android:background="@color/BgColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/topcolor"
        android:padding="20dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageButton
          android:id="@+id/imgback_in_grivance"
          android:layout_width="25dp"
          android:layout_height="25dp"
          app:srcCompat="@drawable/ic_chevron_left_black_24dp"
          android:background="@drawable/circle_bg"
          tools:ignore="VectorDrawableCompat"
          android:focusable="true"
          android:clickable="true"/>
      <TextView
          android:id="@+id/tvDialogactionName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/montserrat"
          android:layout_marginTop="1.3dp"
          android:gravity="center"
          android:text="SEND YOUR GRIEVANCE"
          android:textColor="@color/color1"
          android:textSize="15sp"

          />

      <ProgressBar
          android:id="@+id/pgbar_in_grivace"
          style="?android:attr/progressBarStyle"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:indeterminateTint="@color/color1"

          />
  </RelativeLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:fontFamily="@font/montserrat"
                android:text="Your Name *"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etentered_g_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tvDialogactionName"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_background"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:fontFamily="@font/montserrat"
                android:text="Your Email*"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etentered_g_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tvDialogactionName"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_background"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:fontFamily="@font/montserrat"
                android:text="Your Mobile Number*"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etentered_g_mobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tvDialogactionName"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_background"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:fontFamily="@font/montserrat"
                android:text="Your Course/ Class Roll Number*"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etentered_g_course"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tvDialogactionName"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_background"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:fontFamily="@font/montserrat"
                android:text="Your Grievance*"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etentered_g_grivance"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/tvDialogactionName"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_background"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_btn_submit_grivance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/design_button_design_simple2"
                android:fontFamily="@font/montserrat"
                android:padding="8dp"
                android:text="Submit"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
