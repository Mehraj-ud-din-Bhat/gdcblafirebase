<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout_card_halfNotice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:background="@color/BgColor"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/notificationr1"
            android:background="@color/BgColor">

                <ImageView
                    android:id="@+id/img_jornal_post_title"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="6dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_person_black_24dp"
                    tools:ignore="VectorDrawableCompat"


                    android:background="@color/white_color"
                    />


            <TextView
                android:id="@+id/tv_jp_title"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat"
                android:layout_margin="3dp"

                android:layout_toRightOf="@+id/img_jornal_post_title"
                android:layout_toEndOf="@+id/img_jornal_post_title"
                android:layout_height="match_parent"
                android:text="Post Title"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:gravity="center"/>

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>