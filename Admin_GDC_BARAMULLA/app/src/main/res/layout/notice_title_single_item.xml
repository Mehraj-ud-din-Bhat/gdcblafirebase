<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout_card_halfNotice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:background="@color/BgColor"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/notificationr1"
            android:background="@color/BgColor">


            <ImageView
                android:id="@+id/imageViewlogo_notice_half"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/logo_gdc"


                />


            <ImageView
                android:id="@+id/imgedelete_notice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"

               android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"

                tools:ignore="VectorDrawableCompat"
                android:focusable="true"
                android:clickable="true"
                card_view:srcCompat="@drawable/ic_delete_forever_black_24dp" />

            <TextView
                android:id="@+id/tvnoticetitle"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat"

                android:layout_marginRight="50dp"

                android:layout_toRightOf="@+id/imageViewlogo_notice_half"
                android:layout_toEndOf="@id/imageViewlogo_notice_half"
                android:layout_toLeftOf="@id/imgedelete_notice"
                android:layout_height="match_parent"
                android:text="Notice Title"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:gravity="center"/>

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>