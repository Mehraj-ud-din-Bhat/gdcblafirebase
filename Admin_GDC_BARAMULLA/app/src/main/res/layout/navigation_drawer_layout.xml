
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:background="@color/BgColor"
    android:layout_height="150dp"

    android:padding="16dp"
   android:gravity="center"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
android:layout_gravity="bottom"
   >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <RelativeLayout
                android:layout_width="match_parent"

              android:layout_height="wrap_content"
                android:id="@+id/notificationr1"
                android:background="@color/BgColor"

                >

                <ImageView
                    android:id="@+id/imageViewvvloglo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    app:srcCompat="@drawable/logo_gdc"

                    />
                <TextView
                    android:id="@+id/tvnoticetitlelk"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    android:text="Govt Degree College Baramulla"

                    android:layout_toRightOf="@+id/imageViewvvloglo"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvnoticetitlelj"
                    android:layout_width="wrap_content"

                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    android:text="Through Hardwork to the Stars"
                    android:layout_toRightOf="@+id/imageViewvvloglo"
                    android:layout_below="@+id/tvnoticetitlelk"
                    android:textColor="@color/breakcolor"
                    android:textSize="7sp"
                    android:gravity="center"/>




            </RelativeLayout>


        </RelativeLayout>



</LinearLayout>
